@model Sogeti_Client_Data_Repository.Models.Login
@{
    Layout = "~/Views/Shared/_Landing.cshtml";
    ViewData["Title"] = "Login";
}
<style>
    .hidden {
        display: none;
    }
    .not-hidden {
        display: inline;
    }
    .inavild-pass {
        color: red;
    }

</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">
                Login Page
            </h3>
            <form class="form-horizontal" asp-action="Login">
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">
                                Username
                            </label>
                            <input asp-for="Username" type="text" class="form-control" />
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">
                                Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password"></span>
                            <label class="control-label hidden inavild-pass" id="invalid-label">
                                Invalid Username and/or Password
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">

                        <button type="submit" class="form-control btn-success btn-block btn-lg" style="margin-bottom: 5px">
                            Enter
                        </button>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <a type="button" class="btn btn-block btn-outline-secondary btn-sm" href="/Home/ForgotPassword">
                            Forgot Password
                        </a>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                </form>
        </div>
    </div>
</div>
@{
    if (TempData["msg"] != null)
    {
        <script>
            var label = document.getElementById("invalid-label");
            label.className = 'control-label not-hidden inavild-pass'
        </script>
    }
}