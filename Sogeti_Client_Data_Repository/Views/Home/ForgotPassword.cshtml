@{
    Layout = "~/Views/Shared/_Landing.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">
                Forgot Password
            </h3>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <form role="form">
                        <div class="form-group">
                            <label for="exampleInputUserID">
                                User ID
                            </label>
                            <input type="email" class="form-control" id="exampleInputEmail1" />
                        </div>
                        <div class="form-group">
                            <h5 class="text-center">
                                OR
                            </h5>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputemail">
                                E-mail Address
                            </label>
                            <input type="password" class="form-control" id="exampleInputPassword1" />
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-success btn-block btn-lg" style="margin-bottom: 5px">
                        Enter
                    </button>
                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <a type="button" class="btn btn-block btn-outline-secondary btn-sm" href="/Home/Login">
                        Cancel
                    </a>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </div>
</div>