@model Sogeti_Client_Data_Repository.Models.ChangePassword
@{
    Layout = "~/Views/Shared/_Landing.cshtml";
    ViewData["Title"] = "ChangePass";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">
                Change Password
            </h3>
            <form class="form-horizontal" asp-action="changePass">
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="oldPassword" class="control-label">
                                Old Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control" id="old-password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label for="newPassword" class="control-label">
                                New Password
                            </label>
                            <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" />
                            <span asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="form-group">
                            <label for="newPasswordRepeated" class="control-label">
                                New Password Repeated
                            </label>
                            <input asp-for="NewPasswordRepeated" type="password" class="form-control" id="newPasswordRepeated" />
                            <span asp-validation-for="NewPasswordRepeated"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">

                        <button type="submit" class="form-control btn btn-success btn-block btn-sm" style="margin-bottom: 5px">
                            Enter
                        </button>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <button onclick= "history.go(-1)" type="button" class="btn btn-block btn-outline-secondary btn-sm">
                            Cancel
                        </button>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}