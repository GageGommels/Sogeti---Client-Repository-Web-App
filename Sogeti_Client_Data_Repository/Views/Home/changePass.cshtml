@{
    ViewData["Title"] = "ChangePass";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">
                Change Password
            </h3>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <form role="form">
                        <div class="form-group">
                            <label for="oldPassword">
                                Old Password
                            </label>
                            <input type="password" class="form-control" id="old-password" />
                        </div>
                        <div class="form-group">
                            <label for="newPassword">
                                New Password
                            </label>
                            <input type="password" class="form-control" id="newPassword" />
                        </div>
                        <div class="form-group">
                            <label for="newPasswordRepeated">
                                New Password Repeated
                            </label>
                            <input type="password" class="form-control" id="newPasswordRepeated" />
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">

                    <button type="button" class="btn btn-success btn-block btn-sm" style="margin-bottom: 5px">
                        Enter
                    </button>
                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-block btn-outline-secondary btn-sm">
                        Cancel
                    </button>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </div>
</div>